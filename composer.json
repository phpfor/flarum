{
    "name": "phpfor/flarum-ext-auth-xiaoyunpu",
    "description": "Allow users to log in with Xiaoyunpu.",
    "type": "flarum-extension",
    "keywords": ["authentication"],
    "license": "MIT",
    "authors": [
        {
            "name": "Unno Yang",
            "email": "yangbing80@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/flarum/core/issues",
        "source": "https://github.com/phpfor/flarum/flarum-ext-auth-xiaoyunpu"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.6",
        "phpfor/oauth2-xiaoyunpu": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Flarum\\Auth\\Xiaoyunpu\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Xiaoyunpu Login",
            "icon": {
                "name": "Xiaoyunpu",
                "backgroundColor": "#eee",
                "color": "#333"
            }
        }
    }
}
